{% for item in items %}
	<a href="/catalog/{{item.id}}/" class="item swiper-slide {{type}}">
        <div class="item_img">
            <img src="{{item.cover_url}}" alt="{{img_alt | replace({"{название}" : item.name})}}"/>

            <div class="item_date-availability">
                <span>Свободно 12 декабря</span>
            </div>

        </div>
        <div class="item_info">
            <div class="item_info_top">
                <p class="item_name">{{item.name}}</p>

                {% if type != 'other' %}
                    <p class="item_address">{{item.address}}</p>
                {% endif %}

                <hr class="item_horizontal_raw">
                    
                <div class="item_meta">

                    {% if item.min_capacity != item.max_capacity %}
                        <div class="item_meta_item">
                            <span class="item_meta_label">Вместимость: </span><span class="item_meta_text">{{item.min_capacity}} - {{item.max_capacity}} чел.</span>
                        </div>
                    {% else %}
                        <div class="item_meta_item">
                            <span class="item_meta_label">Вместимость: </span><span class="item_meta_text">{{item.min_capacity}} чел.</span>
                        </div>
                    {% endif %}

                </div>
            </div>
        </div>
        <div class="item_additional-info">

            <div class="item_gift-for-early-reservation">
                <img class="" src="/img/gift.svg" alt="подарок">
                <span>Подарок за бронирование</span>
            </div>

            <div class="item_fireworks-availability">
                <img src="/img/firework.svg" alt="фейерверк">
                <span>Возможность фейерверка</span>
            </div>

        </div>
    </a>
{% endfor %}