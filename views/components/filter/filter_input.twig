<div class="filter_select">
	<p class="filter_label">{{filter_item.name}}</p>
	<div class="filter_input_block" data-type="{{label}}" data-filter-input-block>
            {% if minPrice != null %}
                <input placeholder="от {{ minPrice|number_format(0, ',', ' ') }}" name="price" data-filter-budget-input/>
            {% else %}
                <input placeholder="от 10 000" name="price"/>
            {% endif %}
    </div>
</div>