<div class="filter_select">
	<p class="filter_label">{{filter_item.name}}</p>
	<div class="filter_input_block" data-type="{{label}}" data-filter-input-block>
            {% if minPrice != null %}
                <input placeholder="от {{ minPrice|number_format(0, ',', ' ') }}" name="price" value="{{ filter_item.active|keys|first > 0 ? filter_item.active|keys|first|number_format(0, ',', ' ') : '' }}"  data-value="{{ filter_item.active|keys|first > 0 ? filter_item.active|keys|first : '' }}" data-filter-budget-input/>
            {% else %}
                <input placeholder="от 10 000" name="price" value="{{ filter_item.active|keys|first > 0 ? filter_item.active|keys|first|number_format(0, ',', ' ') : '' }}" data-value="{{ filter_item.active|keys|first > 0 ? filter_item.active|keys|first : '' }}"/>
            {% endif %}
    </div>
</div>