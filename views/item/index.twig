            watchSlidesVisibility: true,
            watchSlidesProgress: true,

            breakpoints: {
                767: {
                    slidesPerView: 3,
                    slidesPerColumn: 1
                }
            }
        });
        var galleryRoomTop = new Swiper('.gallery-top-room', {
