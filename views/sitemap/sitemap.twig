<?xml version="1.0" encoding="UTF-8"?>
    <urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"> 
        <url>
            <loc>{{host}}</loc>
        </url>
        <url>
            <loc>{{host}}/ploshhadki/</loc>
        </url>
        <url>
            <loc>{{host}}/contacts/</loc>
        </url>

        {% if main_subdomain %}
            <url>
                <loc>{{host}}/blog/</loc>
            </url>
            {% for post in blog %}
                <url>
                    <loc>{{host}}/blog/{{post.alias}}/</loc>
                </url>
            {% endfor %}
        {% endif %}

        {% for key, alias in slices %}
        	<url>
	            <loc>{{host}}/ploshhadki/{{alias}}/</loc>
	        </url>
        {% endfor %}

        <url>
            <loc>{{host}}/privacy/</loc>
        </url>

        {% for item in items %}
        	<url>
	            <loc>{{host}}/ploshhadki/{{item.restaurant_unique_id}}/</loc>
	        </url>
        {% endfor %}
        
    </urlset>